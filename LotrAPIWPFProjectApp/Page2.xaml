<Page x:Class="LotrAPIWPFProjectApp.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LotrAPIWPFProjectApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page2">

    <Grid>
        <Frame x:Name="MainFrame" HorizontalAlignment="Left" VerticalAlignment="Center" Width="684" Height="450" NavigationUIVisibility="Hidden" Background="White" Margin="116,0,0,0" Content=""/>
        <Grid x:Name="Sidebar" Margin="0,0,684,0" Background="LightBlue" HorizontalAlignment="Left" Width="116">
            <Button BorderThickness="0" Content="Characters" VerticalAlignment="Top" Background="LightBlue" HorizontalContentAlignment="Left"  x:Name="CharactersButton" Click="CharactersButton_Click"/>
            <Button BorderThickness="0" Content="Quotes" Margin="0,25,0,0" VerticalAlignment="Top" Background="LightBlue" HorizontalContentAlignment="Left" x:Name="QuotesButton"/>
            <Button BorderThickness="0" Content="Favorites" Margin="0,50,0,0" VerticalAlignment="Top" Background="LightBlue" HorizontalContentAlignment="Left" Name="FavoritesButton" Click="FavoritesButton_Click"/>
            <Button BorderThickness="0" Content="Settings" Margin="0,76,0,0" VerticalAlignment="Top" Background="LightBlue" HorizontalContentAlignment="Left" Name="SettingsButton" Click="SettingsButton_Click"/>
        </Grid>
        <TextBox Margin="350,70,234,0" TextWrapping="Wrap" Text="" IsReadOnly="True" Name="QuoteBox1" Height="84" VerticalAlignment="Top"/>
        <TextBox TextWrapping="Wrap" Text="" Margin="351,175,233,0" IsReadOnly="True" Name="QuoteBox2" Height="84" VerticalAlignment="Top"/>
        <TextBox Margin="352,280,232,0" TextWrapping="Wrap" Text="" IsReadOnly="True" Name="QuoteBox3" Height="84" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="352,154,0,0" TextWrapping="Wrap" Text="Quote from:" VerticalAlignment="Top" Width="215" Name="QuotedFromBox1"/>
        <TextBlock HorizontalAlignment="Left" Margin="352,259,0,0" TextWrapping="Wrap" Text="Quote from:" VerticalAlignment="Top" Width="215" Name="QuotedFromBox2"/>
        <TextBlock HorizontalAlignment="Left" Margin="353,364,0,0" TextWrapping="Wrap" Text="Quote from:" VerticalAlignment="Top" Width="215" Name="QuotedFromBox3"/>
        <Button Content="Get 3 random quotes" HorizontalAlignment="Left" Margin="400,34,0,0" VerticalAlignment="Top" Click="Button_Click" Name="RandomQuoteButton"/>
    </Grid>
</Page>
