<Page x:Class="LotrAPIWPFProjectApp.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LotrAPIWPFProjectApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page3">

    <Grid>
        <Frame x:Name="MainFrame" HorizontalAlignment="Left" VerticalAlignment="Center" Width="684" Height="450" NavigationUIVisibility="Hidden" Background="White" Margin="116,0,0,0"/>
        <Grid Margin="0,0,684,0" x:Name="Sidebar" Background="LightBlue">
            <Button BorderThickness="0" Content="Characters" VerticalAlignment="Top" Background="LightBlue" HorizontalContentAlignment="Left"  x:Name="CharactersButton" Click="CharactersButton_Click"/>
            <Button BorderThickness="0" Content="Quotes" Margin="0,25,0,0" VerticalAlignment="Top" Background="LightBlue" HorizontalContentAlignment="Left" x:Name="QuotesButton" Click="QuotesButton_Click"/>
            <Button BorderThickness="0" Content="Favorites" Margin="0,50,0,0" VerticalAlignment="Top" Background="LightBlue" HorizontalContentAlignment="Left" Name="FavoritesButton"/>
            <Button BorderThickness="0" Content="Settings" Margin="0,76,0,0" VerticalAlignment="Top" Background="LightBlue" HorizontalContentAlignment="Left" Name="SettingsButton" Click="SettingsButton_Click"/>
        </Grid>
    </Grid>
</Page>
