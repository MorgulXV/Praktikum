        </TextBox>
        <TextBox HorizontalAlignment="Left" Margin="321,216,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="276" Name="GenderBox" IsReadOnly="True"/>
        <TextBox HorizontalAlignment="Left" Margin="321,170,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="276" Name="RaceBox" IsReadOnly="True"/>
