        <TextBox HorizontalAlignment="Left" Margin="321,238,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="276" Name="HeightBox" IsReadOnly="True"/>
        <Button Content="Get random character" HorizontalAlignment="Left" Margin="400,52,0,0" VerticalAlignment="Top" Name="StartButton" Click="StartButton_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="240,194,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="55"><Run Language="de-de" Text="Hair color"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="252,309,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="de-de" Text="WikiUrl"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="251,215,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="de-de" Text="Gender"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="255,171,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="de-de" Text="Race"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="252,148,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="de-de" Text="Death"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="252,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="de-de" Text="Name"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="248,265,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="de-de" Text="Spouse"/></TextBlock>
