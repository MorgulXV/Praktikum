        <TextBlock HorizontalAlignment="Left" Margin="255,123,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="de-de" Text="Birth"/></TextBlock>
        <Button HorizontalAlignment="Left" Margin="321,309,0,0" Content="" VerticalAlignment="Top" Width="276" Name="WikiUriBox" Click="WikiUriBox_MouseLeftButtonDown" Background="White" HorizontalContentAlignment="Left"/>
        <Grid x:Name="Sidebar" Background="LightBlue" HorizontalAlignment="Left" Width="116">
            <Button BorderThickness="0" Content="Characters" VerticalAlignment="Top" Background="LightBlue" HorizontalContentAlignment="Left"  x:Name="CharactersButton"/>
            <Button BorderThickness="0" Content="Quotes" Margin="0,25,0,0" VerticalAlignment="Top" Background="LightBlue" HorizontalContentAlignment="Left" x:Name="QuotesButton" Click="QuotesButton_Click"/>
            <Button BorderThickness="0" Content="Favorites" Margin="0,50,0,0" VerticalAlignment="Top" Background="LightBlue" HorizontalContentAlignment="Left" Name="FavoritesButton" Click="FavoritesButton_Click"/>
            <Button BorderThickness="0" Content="Settings" Margin="0,76,0,0" VerticalAlignment="Top" Background="LightBlue" HorizontalContentAlignment="Left" Name="SettingsButton" Click="SettingsButton_Click"/>
        </Grid>
    </Grid>
