<Window x:Class="CalculatorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculatorWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="1" HorizontalAlignment="Left" Margin="318,341,0,0" VerticalAlignment="Top" Width="21" Name="Button_1" RenderTransformOrigin="0.5,0.5" Click="Button_1_Click"/>
        <Button Content="2" HorizontalAlignment="Left" Margin="343,341,0,0" VerticalAlignment="Top" Width="21" Name="Button_2" Click="Button_2_Click"/>
        <Button Content="3" HorizontalAlignment="Left" Margin="369,341,0,0" VerticalAlignment="Top" Width="21" Name="Button_3" Click="Button_3_Click"/>
        <Button Content="4" HorizontalAlignment="Left" Margin="318,316,0,0" VerticalAlignment="Top" Width="21" Name="Button_4" RenderTransformOrigin="-1.497,4.249" Click="Button_4_Click"/>
        <Button Content="5" HorizontalAlignment="Left" Margin="343,316,0,0" VerticalAlignment="Top" Width="21" Name="Button_5" Click="Button_5_Click"/>
        <Button Content="6" HorizontalAlignment="Left" Margin="369,316,0,0" VerticalAlignment="Top" Width="21" Name="Button_6" RenderTransformOrigin="0.827,2.966" Click="Button_6_Click"/>
        <Button Content="7" HorizontalAlignment="Left" Margin="318,291,0,0" VerticalAlignment="Top" Width="21" Name="Button_7" RenderTransformOrigin="-1.122,3.298" Click="Button_7_Click"/>
        <Button Content="8" HorizontalAlignment="Left" Margin="343,291,0,0" VerticalAlignment="Top" Width="21" Name="Button_8" Click="Button_8_Click"/>
        <Button Content="9" HorizontalAlignment="Left" Margin="369,291,0,0" VerticalAlignment="Top" Width="21" Name="Button_9" Click="Button_9_Click"/>
        <Button Content="0" HorizontalAlignment="Left" Margin="343,366,0,0" VerticalAlignment="Top" Width="21" Name="Button_0" Click="Button_0_Click"/>
        <TextBox HorizontalAlignment="Left" Margin="318,238,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="98" Name="Display_Result"/>
        <Button Content="," HorizontalAlignment="Left" Margin="318,366,0,0" VerticalAlignment="Top" Width="21" Name="Button_Comma" Click="Button_Comma_Click"/>
        <Button Content="=" HorizontalAlignment="Left" Margin="369,366,0,0" VerticalAlignment="Top" Width="21" Name="Button_Equals" Click="Button_Equals_Click"/>
        <Button Content="+" HorizontalAlignment="Left" Margin="395,366,0,0" VerticalAlignment="Top" Width="21" Name="Button_Add" Height="20" Click="Button_Add_Click"/>
        <Button Content="-" HorizontalAlignment="Left" Margin="395,341,0,0" VerticalAlignment="Top" Width="21" Name="Button_Subtract" Click="Button_Subtract_Click"/>
        <Button Content="X" HorizontalAlignment="Left" Margin="395,291,0,0" VerticalAlignment="Top" Width="21" Name="Button_Multiply" Click="Button_Multiply_Click"/>
        <Button Content="/" HorizontalAlignment="Left" Margin="395,316,0,0" VerticalAlignment="Top" Width="21" Name="Button_Divide" Click="Button_Divide_Click"/>
        <Button Content="AC" HorizontalAlignment="Left" Margin="318,266,0,0" VerticalAlignment="Top" Width="44" Name="Button_ClearAll" Click="Button_ClearAll_Click"/>
        <Button Content="^" HorizontalAlignment="Left" Margin="395,266,0,0" VerticalAlignment="Top" Width="22"/>

    </Grid>
</Window>
